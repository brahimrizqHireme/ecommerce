	<div class="row">
		{% include "shared/_assurance.html.twig" with {
            'color' : 'primary',
            'icon' : 'fa-truck',
            'text' : "Lorem ipsum, dolor sit amet consectetur adipisicing eli. magni pariatur10"
        } %}
		{% include "shared/_assurance.html.twig" with {
            'color' : 'success',
            'icon' : 'fa-check',
            'text' : "Lorem ipsum, dolor sit amet consectetur adipisicing eli. magni pariatur10"
        } %}
		{% include "shared/_assurance.html.twig" with {
            'color' : 'warning',
            'icon' : 'fa-lock',
            'text' : "Lorem ipsum, dolor sit amet consectetur adipisicing eli. magni pariatur10"
        } %}
	</div>
{% endblock %}
