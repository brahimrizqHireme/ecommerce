{% extends "base.html.twig" %}

{% block title %}
	{{'show.page_title'|trans({'%title%' : product.name})}}
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{path('homepage')}}">{{'home.page_title'|trans({'%title%' : ''})}}</a>
		</li>
		<li class="breadcrumb-item">
			<a href="{{path('product_category', {'slug' : product.category.slug})}}">{{product.category.name}}</a>
		</li>
		<li class="breadcrumb-item active">{{product.name}}</li>
	</ol>
	<h2>
		{{product.name}}
		{{(product.price/100)|format_currency('EUR', { rounding_mode: 'floor'})}}
	</h2>
	<small>
		{{product.id}}
	</small>

	<div class="row">
		<div class="col-4">
			<img src="{{product.mainPicture}}" alt="{{product.name}}" class="img-fluid">
		</div>
		<div class="col">
			<span class="badge bg-info text-sm">{{product.category.name}}
				({{product.category.id}})</span>
			<p>{{product.shortDescription}}</p>
			<a href="{{path('cart_add', {'id' : product.id})}}" class="btn btn-success btn-md">
				<i class="fas fa-shopping-cart"></i>
				{{'show.add_to_cart'|trans}}
			</a>
		</div>
	</div>

{% endblock %}
