{% extends "base.html.twig" %}

{% block title %}
	{{'admin.product.edit.page_title'|trans({'%title%' : ''})}}
{% endblock %}


{% block body %}
	<h1>{{'admin.product.edit.page_title'|trans({'%title%' : ''})}}</h1>


	<div class="card mb-3">
		<div class="card-header">{{'admin.product.edit.page_title'|trans({'%title%' : ''})}}</div>
		<div
			class="card-body">

			{# {{form(formView)}} #}
			{{form_start(formView, {"attr" : {"novalidate" : "novalidate"}})}}

			{# {{form_errors(formView)}} #}

			<div class="row">
				<div class="col">
					{{form_row(formView.name, {'attr' : {'class' : 'mb-3'}})}}
					{{form_row(formView.price, {'attr' : {'class' : 'mb-3'}})}}
				</div>
				<div class="col">
					{{form_row(formView.mainPicture, {'attr' : {'class' : 'mb-3'}})}}
					{# {{form_row(formView.category)}} #}
					{{form_row(formView.shortDescription, {'attr' : {'class' : 'mb-3'}})}}
				</div>

			</div>
			<button type="submit" class="btn btn-primary btn-md">
				<i class="fas fa-save"></i>
				{{'admin.product.edit.edit'|trans}}
			</button>


			{# {{form_widget(formView)}} #}

			{{form_end(formView)}}
		</div>
	</div>

{% endblock %}

